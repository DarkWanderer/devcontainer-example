{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'devcont'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=devcont",
                    "--package=devcont"
                ],
                "filter": {
                    "name": "devcont",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=devcont",
                    "--package=devcont"
                ],
                "filter": {
                    "name": "devcont",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug integration tests",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--test=integration_test"
                ],
                "filter": {
                    "name": "integration_test",
                    "kind": "test"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}